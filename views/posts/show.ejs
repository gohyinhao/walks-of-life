<% include ../partials/header %>

<div id="main-content-container">
    <h1 id="header" class="ui header"><%= post.title %></h1>
    <div id="content" class="ui container">
        <div class="ui text container">
            <p><%= post.content %></p>
        </div>

        <div class="ui divider"></div>

        <a class="ui blue basic button" href="/posts/<%= post._id %>/edit">Edit Post</a>
        <a class="ui black basic button" href="/posts">Go Back!</a>
        <form class="delete-form" action="/posts/<%= post._id %>?_method=DELETE" method="POST">
            <button class="ui red basic button">Delete Post</button>
        </form>
    </div>
</div>

<% include ../partials/footer %>
